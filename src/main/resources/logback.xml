<?xml version="1.0" encoding="UTF-8" ?>
<configuration debug="false">
    <appender name="INFO" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>
                %d{HH:mm:ss.SSS} %boldCyan(%-34.-34thread) %red(%10.10X{jda.shard}) %boldGreen(%-20.-20logger{0}) %highlight(%-6level) %msg%n
            </Pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="INFO" />
    </root>

</configuration>